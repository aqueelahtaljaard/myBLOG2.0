<!DOCTYPE html>
<html>
  <head>
    <title><%= title %></title>
    <link rel='stylesheet' href='/stylesheets/style.css' />

    <!-- BOOTSTRAP Latest compiled and minified CSS -->
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" integrity="sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u" crossorigin="anonymous">
  </head>
  <body>
    <ul class="nav nav-pills">
      <li><img src="images/logo.jpg"></li>
      <li role="presentation" ><a href="/">Home</a></li>
      <li role="presentation"class="active"><a href="#">Archived</a></li>
      <li role="presentation"><a href="new">Post</a></li>
      <button type="button" class="btn btn-default navbar-btn"><a href="signup"> SIGN OUT</a></button>
    </ul>

    <div class="container">
      <div class="row">
        <h1>WHAT HAVE YOU MISSED?</h1>
        <p>Welcome to Archive Page</p>

      </div>
      <div class="row">
        <% if (posts.length !=0) { %>
          <% posts.forEach(function(post){ %>
            <!-- <h1><%= title %></h1> -->
            <div class="col-xs-12 col-md-6 col-lg-4">
              <div class="panel panel-primary">

                <div class="panel-heading">
                  <h3 class="panel-title"><%= post.title %></h3>
                </div>

                <div class="panel-footer">
                  <p><%= post.author %></p>
                  <p><%= post.date %></p>
                </div>

                <div class="panel-body">
                <img class="image" src="<%= post.image %>" alt="">
                </div>

                <div class="panel-body">
                  <p><%- post.briefcontent %></p>
                </div>


            </div>

        </div>
        <% }); %>

        <%  } else{ %>
          <p>You have no blog posts</p>
        <% } %>
      </div>
    </div>
  </body>
</html>
